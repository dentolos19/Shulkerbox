<ContentDialog xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:models="using:CraftMine.Models"
               x:Class="CraftMine.Views.SettingsDialog"
               Title="Settings"
               PrimaryButtonText="Close"
               PrimaryButtonCommand="{Binding SaveCommand}">
    <ContentDialog.DataContext>
        <models:SettingsDialogModel/>
    </ContentDialog.DataContext>
    <StackPanel Spacing="4">
        <NumberBox Header="Memory Allocation" Value="{Binding MemoryAllocation, Mode=TwoWay}"/>
        <CheckBox Content="Show Snapshots" IsChecked="{Binding ShowSnapshots, Mode=TwoWay}"/>
    </StackPanel>
</ContentDialog>