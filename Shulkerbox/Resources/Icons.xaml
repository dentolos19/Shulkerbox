<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="IconFont" TargetType="Run">
        <Setter Property="FontFamily" Value="Fonts/#Font Awesome 6 Free Solid"/>
    </Style>
    <Style x:Key="PlayIcon" TargetType="Run" BasedOn="{StaticResource IconFont}">
        <Setter Property="Text" Value="&#xf04b;"/>
    </Style>
    <Style x:Key="RefreshIcon" TargetType="Run" BasedOn="{StaticResource IconFont}">
        <Setter Property="Text" Value="&#xf021;"/>
    </Style>
    <Style x:Key="FolderIcon" TargetType="Run" BasedOn="{StaticResource IconFont}">
        <Setter Property="Text" Value="&#xf07c;"/>
    </Style>
    <Style x:Key="SettingsIcon" TargetType="Run" BasedOn="{StaticResource IconFont}">
        <Setter Property="Text" Value="&#xf013;"/>
    </Style>
    <Style x:Key="SaveIcon" TargetType="Run" BasedOn="{StaticResource IconFont}">
        <Setter Property="Text" Value="&#xf0c7;"/>
    </Style>
    <Style x:Key="BackIcon" TargetType="Run" BasedOn="{StaticResource IconFont}">
        <Setter Property="Text" Value="&#xf060;"/>
    </Style>
</ResourceDictionary>