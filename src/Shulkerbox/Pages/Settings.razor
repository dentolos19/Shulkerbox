@page "/settings"

<MudExpansionPanels>
    <MudExpansionPanel Text="General Preferences">
        <MudNumericField
            Label="Memory Allocation (MB)"
            Step="1024"
            Min="1024"
            Max="8192"
            @bind-Value="MemoryAllocation" />
    </MudExpansionPanel>
    <MudExpansionPanel Text="About This App">
        <MudMarkdown Value="@About" />
    </MudExpansionPanel>
</MudExpansionPanels>