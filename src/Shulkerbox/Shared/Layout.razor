@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Style="height: 100vh">
    <MudAppBar>
        <MudTooltip Text="Navigate Back" Placement="Placement.Right">
            <MudIconButton
                Color="Color.Inherit"
                Icon="@Icons.Material.Filled.ArrowBack"
                OnClick="NavigateBack" />
        </MudTooltip>
        <MudSpacer />
        <MudText Typo="Typo.h5">Shulkerbox</MudText>
        <MudSpacer />
        <MudTooltip Text="Open GitHub Repository" Placement="Placement.Left">
            <MudIconButton
                Color="Color.Inherit"
                Icon="@Icons.Custom.Brands.GitHub"
                OnClick="OpenGitHub"/>
        </MudTooltip>
    </MudAppBar>
    <MudMainContent Style="height: 100%">
        @Body
    </MudMainContent>
</MudLayout>