@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Disabled="LayoutService.IsLockdownMode" OnClick="ToggleDrawer"/>
        <MudText Typo="Typo.h5" Class="ml-3">Shulkerbox</MudText>
    </MudAppBar>
    <MudDrawer Elevation="2" ClipMode="DrawerClipMode.Always" @bind-Open="IsDrawerOpened">
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
            <MudNavLink Href="/versions" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Apps">Versions</MudNavLink>
            <MudNavLink Href="/accounts" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.People">Accounts</MudNavLink>
            <MudNavLink Href="/settings" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Settings">Settings</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>